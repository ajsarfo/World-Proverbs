<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorldProverbs" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorBackground">@color/activity_background</item>
        <item name="android:windowBackground">?android:attr/colorBackground</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/textColorPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorSurface">@color/colorSurface</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/raleway_semi_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.WorldProverbs.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MaterialDialogTheme" parent="Widget.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/colorSecondary</item>
    </style>
</resources>